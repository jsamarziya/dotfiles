#!/usr/bin/env bash

# Detect which `ls` flavor is in use
if /bin/ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag="--color"
else # OS X `ls`
  colorflag="-G"
fi

function ls () {
  /bin/ls -xF "$colorflag" "$@" | less -EFmn
}

function l() {
  ls -1 "$@"
}

function ll() {
  ls -lh "$@"
}

function lll() {
  ls -lhA "$@"
}

if command -v dig > /dev/null; then
    # Run `dig` and display the most useful info
    function digga() {
        dig +nocmd "$1" any +multiline +noall +answer;
    }
fi

if [[ "$OSTYPE" == "darwin"* ]]; then
    function e() {
        if [[ ! -e "$@" ]]; then
            read -p "The file $@ does not exist. Create it? " yn
            if [[ $yn == [Yy]* ]]; then
                touch "$@"
            else
                return
            fi
        fi
        open -t "$@"
    }
fi
